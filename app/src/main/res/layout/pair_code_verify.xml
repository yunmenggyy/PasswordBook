<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/id_paircode_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/id_title2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="34dp"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_title"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/id_title3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/doorlock_des"
        android:textColor="#666666"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        app:layout_constraintTop_toBottomOf="@id/id_title2" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_numbers_container"
        android:layout_marginTop="76dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--code1-->
        <EditText
            android:id="@+id/id_code1"
            tools:text="6"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/id_code2"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            app:layout_constraintStart_toStartOf="@id/id_code1"
            app:layout_constraintEnd_toEndOf="@id/id_code1"
            app:layout_constraintTop_toBottomOf="@id/id_code1"
            android:background="#50000000"
            android:layout_marginTop="8dp"
            android:layout_width="36dp"
            android:layout_height="0.5px"/>

        <!--code2-->
        <EditText
            android:id="@+id/id_code2"
            tools:text="6"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/id_code1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/id_code3"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            app:layout_constraintStart_toStartOf="@id/id_code2"
            app:layout_constraintEnd_toEndOf="@id/id_code2"
            app:layout_constraintTop_toBottomOf="@id/id_code2"
            android:background="#50000000"
            android:layout_marginTop="8dp"
            android:layout_width="36dp"
            android:layout_height="0.5px"/>


        <!--code3-->
        <EditText
            android:id="@+id/id_code3"
            tools:text="6"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/id_code2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/id_code4"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            app:layout_constraintStart_toStartOf="@id/id_code3"
            app:layout_constraintEnd_toEndOf="@id/id_code3"
            app:layout_constraintTop_toBottomOf="@id/id_code3"
            android:background="#50000000"
            android:layout_marginTop="8dp"
            android:layout_width="36dp"
            android:layout_height="0.5px"/>


        <!--code4-->
        <EditText
            android:id="@+id/id_code4"
            tools:text="6"
            android:gravity="center"
            android:textSize="40dp"
            app:layout_constraintLeft_toRightOf="@id/id_code3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/id_code5"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:textColor="@color/black"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            app:layout_constraintStart_toStartOf="@id/id_code4"
            app:layout_constraintEnd_toEndOf="@id/id_code4"
            app:layout_constraintTop_toBottomOf="@id/id_code4"
            android:background="#50000000"
            android:layout_marginTop="8dp"
            android:layout_width="36dp"
            android:layout_height="0.5px"/>

        <!--code5-->
        <EditText
            android:id="@+id/id_code5"
            tools:text="6"
            android:gravity="center"
            android:textSize="40dp"
            app:layout_constraintLeft_toRightOf="@id/id_code4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/id_code6"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:textColor="@color/black"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            app:layout_constraintStart_toStartOf="@id/id_code5"
            app:layout_constraintEnd_toEndOf="@id/id_code5"
            app:layout_constraintTop_toBottomOf="@id/id_code5"
            android:background="#50000000"
            android:layout_marginTop="8dp"
            android:layout_width="36dp"
            android:layout_height="0.5px"/>



        <!--code6-->
        <EditText
            android:id="@+id/id_code6"
            tools:text="6"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="40sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/id_code5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            app:layout_constraintStart_toStartOf="@id/id_code6"
            app:layout_constraintEnd_toEndOf="@id/id_code6"
            app:layout_constraintTop_toBottomOf="@id/id_code6"
            android:background="#50000000"
            android:layout_marginTop="8dp"
            android:layout_width="36dp"
            android:layout_height="0.5px"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>